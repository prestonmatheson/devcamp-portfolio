<style>
.pagination{padding:.3em;margin:.3em; font: 16px helvetica,arial,freesans,clean,sans-serif;}
.pagination a{padding:.1em .3em;margin:.2em;border:1px solid white;text-decoration:none;color: black; background: #f2f2f2
; opacity: .8; border-radius: 3px;}
.pagination a:hover,.pagination a:active{border:1px solid #369;color:#000;}
.pagination span.current{padding:.1em .3em;margin:.2em;border:1px solid white;font-weight:bold;background-color:#369;color: black;}
.pagination span.disabled{padding:.1em .3em;margin:.2em;border:1px solid white;color:#ddd;}
</style>
<%= paginator.render do -%>
<div class="pagination"><%= prev_page_tag -%><%= next_page_tag -%></div>
<% end -%>
